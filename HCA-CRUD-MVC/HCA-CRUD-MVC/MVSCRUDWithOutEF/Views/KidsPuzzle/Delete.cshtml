@model KidsPuzzles.Models.KidsPuzzleViewModel

@{
    ViewData["Title"] = "Delete Puzzle";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you no longer want this puzzle and want to delete this?</h3>
<div>    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PuzzleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PuzzleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PuzzleDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PuzzleDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PuzzlePrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PuzzlePrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PuzzleRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PuzzleRating)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PuzzleID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Puzzles List</a>
    </form>
</div>
