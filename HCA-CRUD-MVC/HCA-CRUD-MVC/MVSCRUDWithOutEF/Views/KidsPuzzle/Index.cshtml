@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Puzzles";
}

<div>
    <h1>@ViewData["Title"]</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Puzzle Name
            </th>
            <th>
                Puzzle Description
            </th>
            <th>
                Puzzle Price
            </th>
            <th>
                Puzzle Rating
            </th>
            <th>
                <a asp-action="AddOrEdit">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@for (int i=0;i< Model.Rows.Count; i++) {
        <tr>
            <td>
                @Model.Rows[i]["PuzzleName"]
            </td>
            <td>
                @Model.Rows[i]["PuzzleDescription"]
            </td>
            <td>
                @Model.Rows[i]["PuzzlePrice"]
            </td>
            <td>
                @Model.Rows[i]["PuzzleRating"]
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["PuzzleID"]">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["PuzzleID"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
